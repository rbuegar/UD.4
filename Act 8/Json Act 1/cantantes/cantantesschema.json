{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "discografica": {
            "type": "object",
            "properties": {
                "cantante": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "nombre": {"type": "string"},
                            "genero": {"type": "string"},
                            "albumes": {"type": "string"},
                            "popularidad": {"type": "string"}
                        },
                        "required": ["nombre", "genero", "albumes", "popularidad"]
                    }
                }
            },
            "required": ["cantante"]
        }
    },
    "required": ["discografica"]
}